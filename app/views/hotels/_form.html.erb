<div id='test'>
 <%= form_for @hotel do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :location %>
    <%= f.collection_select(:location_id, Location.all, :id, :name, :prompt => 'Select location') %>

    <%= f.label :price_level %>
    <%= f.text_field :price_level, placeholder: "1-5" %>

    <%= f.label :amenities %>
    <%= f.text_field :amenities %>

    <%= f.submit %>

 <% end %>
</div>